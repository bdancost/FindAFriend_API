{
  "compilerOptions": {
    // Diretórios de entrada e saída
    "rootDir": "./src",
    "outDir": "./dist",

    // Ambiente / Módulos
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "types": ["node"],

    // Path aliases
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },

    // Saídas de declaração
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Type checking rigoroso
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "skipLibCheck": true,

    // Módulos Node ESM
    "verbatimModuleSyntax": true,
    "moduleDetection": "force"
  },
  "include": ["src"]
}
